<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no.woact.stud.smaola14.tictactoe.Menu"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPlayerOne"
        android:inputType="textPersonName"
        android:hint="@string/hint_player_one"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPlayerTwo"
        android:inputType="textPersonName"
        android:hint="@string/hint_player_two"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_game"
        android:id="@+id/btnStart"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_weight="0.1"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:background="@color/buttonBackground"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ScoreBoard"
        android:id="@+id/btnScoreBoard"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_weight="0.1"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:background="@color/buttonBackground"
        android:layout_margin="10dp" />

</LinearLayout>
